{
  "manifest_version": 2,
  "name": "自動的にタブを切り替えるフレンズ",
  "version": "0.1",
  "description": "現在開かれているタブを指定された分周期で切り替える",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
      "popup.html",
      "background.html",
      "jquery-1.10.1.min.map"
   ],
  "background":{
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": [
         "http://*/*",
         "https://*/*"
      ],
      "js": ["jquery-1.10.1.min.js",
             "myscript.js"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
